# IIFTL Backend Environment Variables for Render
NODE_ENV=production
PORT=10000

# PostgreSQL Connection (Render will provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret (set this in Render dashboard)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Origins
ALLOWED_ORIGINS=https://iiftl-portal.vercel.app,https://your-frontend-domain.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Store (PostgreSQL)
SESSION_SECRET=your-session-secret-key

# Keep MongoDB URI for data migration (remove after migration is complete)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database
